{
  "realm": "tpi-backend",
  "enabled": true,
  "displayName": "TPI Backend Sistema de Transporte",
  "displayNameHtml": "<b>TPI Backend</b> Sistema de Transporte",
  "accessTokenLifespan": 3600,
  "accessCodeLifespan": 60,
  "ssoSessionIdleTimeout": 1800,
  "ssoSessionMaxLifespan": 36000,
  "refreshTokenMaxReuse": 0,
  "roles": {
    "realm": [
      {
        "name": "ADMIN",
        "description": "Administrador del sistema con acceso completo",
        "composite": false
      },
      {
        "name": "FLOTA_MANAGER",
        "description": "Gestor de flota - puede administrar camiones, depósitos y tarifas",
        "composite": false
      },
      {
        "name": "OPERACIONES_MANAGER",
        "description": "Gestor de operaciones - puede administrar solicitudes y seguimiento",
        "composite": false
      },
      {
        "name": "TRANSPORTISTA",
        "description": "Transportista - puede ver sus asignaciones y actualizar estado de tramos",
        "composite": false
      },
      {
        "name": "USER",
        "description": "Usuario básico del sistema",
        "composite": false
      }
    ]
  },
  "clients": [
    {
      "clientId": "tpi-api-gateway",
      "name": "TPI API Gateway",
      "description": "Cliente para el API Gateway del sistema TPI",
      "enabled": true,
      "clientAuthenticatorType": "client-secret",
      "secret": "tpi-gateway-secret-2024-secure",
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": true,
      "publicClient": false,
      "bearerOnly": false,
      "consentRequired": false,
      "redirectUris": [
        "http://localhost:8080/*",
        "http://localhost:3000/*",
        "http://localhost:4200/*"
      ],
      "webOrigins": ["*"],
      "protocol": "openid-connect",
      "attributes": {
        "access.token.lifespan": "3600",
        "client.secret.creation.time": "1698000000"
      },
      "defaultRoles": ["USER"]
    },
    {
      "clientId": "servicio-flota",
      "name": "Servicio Flota",
      "description": "Microservicio de gestión de flota",
      "enabled": true,
      "bearerOnly": true,
      "publicClient": false,
      "serviceAccountsEnabled": true,
      "protocol": "openid-connect"
    },
    {
      "clientId": "servicio-operaciones",
      "name": "Servicio Operaciones",
      "description": "Microservicio de gestión de operaciones",
      "enabled": true,
      "bearerOnly": true,
      "publicClient": false,
      "serviceAccountsEnabled": true,
      "protocol": "openid-connect"
    },
    {
      "clientId": "postman-client",
      "name": "Postman Testing Client",
      "description": "Cliente para testing con Postman",
      "enabled": true,
      "clientAuthenticatorType": "client-secret",
      "secret": "postman-secret-2024",
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": true,
      "publicClient": false,
      "redirectUris": [
        "https://oauth.pstmn.io/v1/callback",
        "http://localhost:*"
      ],
      "webOrigins": ["*"]
    }
  ],
